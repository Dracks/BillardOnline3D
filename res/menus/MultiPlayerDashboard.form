form ListOptions
{
    theme = res/theme/editor.theme
    autoWidth = true
    autoHeight = true
	
	container
	{
		style = noBorder
        layout = LAYOUT_HORIZONTAL
		alignment = ALIGN_VCENTER_HCENTER
        position = 0, 0
		autoHeight = true
		width = 480
		
		container actions
		{
			style = noBorder
			layout = LAYOUT_VERTICAL
			alignment = ALIGN_VCENTER_LEFT
			position = 0, 0
			height = 300
			width = 200
			
			button ListMatches
			{
				style = buttonStyle
				width = 180
				height = 30
				text = List Match
			}

			button new
			{
				style = buttonStyle
				width = 180
				height = 30
				text = New Match
			}

			button friends
			{
				style = buttonStyle
				width = 180
				height = 30
				text = Friends
			}
			
			button profile
			{
				style = buttonStyle
				width = 180
				height = 30
				text = Profile
			}

			button back
			{
				style = buttonStyle
				width = 180
				height = 30
				text = Back
			}
		}
		container detail
		{
			style = basic
			layout = LAYOUT_HORIZONTAL
			alignment = ALIGN_VCENTER_RIGHT
			position = 0, 0
			autoHeight = true
			width = 280
			scroll = SCROLL_VERTICAL
		}
	}
}

form Login
{
    theme = res/theme/editor.theme
    autoWidth = true
    autoHeight = true

    container popup
    {
		style = basic
        layout = LAYOUT_VERTICAL
		alignment = ALIGN_VCENTER_HCENTER
        position = 0, 0
		height = 300
		width = 200
		
		label title
        {
            style = title
            autoWidth=true
			height=60
			alignment = ALIGN_VCENTER_HCENTER
            text = Login
        }
		
		textbox user
		{
			style = buttonStyle
            autoWidth=true
			height=40
			alignment = ALIGN_VCENTER_LEFT
		}
		
		textbox password
		{
			style = buttonStyle
            autoWidth=true
			height=40
			alignment = ALIGN_VCENTER_LEFT
			inputMode = PASSWORD
		}
		
		button login
		{
			style = buttonStyle
			width = 180
			height = 50
			text = Ok
		}

		button cancel
		{
			style = buttonStyle
			width = 180
			height = 50
			text = Back
		}
	}
}


