form particleEditor
{
    theme = res/theme/editor.theme
    autoWidth = true
    autoHeight = true	
	alignment = ALIGN_VCENTER_HCENTER

    container presets
    {
        style = basic
        layout = LAYOUT_VERTICAL
		alignment = ALIGN_VCENTER_HCENTER
		width = 800
		height =200

		label title
        {
            style = title
            autoWidth=true
			height=40
			alignment = ALIGN_VCENTER_HCENTER
            text = Select the Game Mode
        }
		container gameMode
		{
			style = noBorder
			layout = LAYOUT_FLOW
			alignment = ALIGN_VCENTER_HCENTER
			height = 80
			width = 600

			button eightBall
			{
				style = buttonStyle
				width= 150
				height = 50
				text = 8 Ball
			}
			
			button nineBall
			{
				style = buttonStyle
				width= 150
				height = 50
				text = 9 Ball
			}
			
			button threeBand
			{
				style = buttonStyle
				width= 150
				height = 50
				text = 3 Band
			}
		}
		button back
		{
			style = buttonStyle
			alignment = ALIGN_VCENTER_HCENTER
			width= 200
			height = 50
			text = Back
		}
	}
}