form Menu
{
    theme = res/theme/editor.theme
    autoWidth = true
    autoHeight = true
	
	container
	{
		style = basic
        layout = LAYOUT_HORIZONTAL
		alignment = ALIGN_VCENTER_HCENTER
        position = 0, 0
		height = 300
		width = 300
		
		label title
        {
            style = title
            autoWidth=true
			height=40
			alignment = ALIGN_TOP_HCENTER
            text = Select the Game Mode
        }
		
		container actions
		{
			style = noBorder
			layout = LAYOUT_VERTICAL
			alignment = ALIGN_VCENTER_HCENTER
			position = 0, 0
			height = 200
			width = 170
			
			button eightBall
			{
				style = buttonStyle
				width= 150
				height = 50
				text = 8 Ball
			}
			
			button nineBall
			{
				style = buttonStyle
				width= 150
				height = 50
				text = 9 Ball
			}
			
			button threeBand
			{
				style = buttonStyle
				width= 150
				height = 50
				text = 3 Band
			}

			button back
			{
				style = buttonStyle
				width = 150
				height = 40
				text = Back
			}
		}
	}
}

